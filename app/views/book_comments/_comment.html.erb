<% book1.book_comments.each do |book_comment| %>
  <tr>
    <td><%= link_to user_path(book_comment.user) do %>
      <%= attachment_image_tag book_comment.user, :profile_image, :fill, 20, 20, format: 'jpeg', class: " pull-left ", fallback: "no_image.jpg",size:'20x20' %><br><%= book_comment.user.name %>さん
      <% end %>
    </td>
    <td><%= book_comment.comment %></td>
    <td>
      <% if book_comment.user == current_user%>
        <div>
          <%= link_to "削除", book_book_comment_path(book_comment.book_id, book_comment.id),class:"btn-sm btn-danger", method: :delete, remote: true %>
        </div>
      <% end %>
    </td>
  </tr>
<% end %>