<div class="col-xs-3">
  <h3>ユーザー情報</h3>
    <%= render 'users/info', user: current_user %>
  <h3>新規投稿</h3>
  <%= render 'books/form', book: @book %>
</div>
<div class="col-xs-9">
  <h3>書籍感想一覧</h3>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>タイトル</th>
          <th>感想</th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= link_to user_path(book.user_id) do %>
              <%= attachment_image_tag book.user, :profile_image, :fill, 20, 20, format: 'jpeg', class: " pull-left ", fallback: "no_image.jpg",size:'20x20' %> <% end %></td>
            <td><%= link_to book.title,book_path(book) %></td>
            <td><%= book.body %></td>
            <td>
              <div id="favorites_buttons_<%= book.id %>">
              <%= render partial: 'favorites/favorite', locals: { book1: book} %>
              </div>
            </td>
            <td><%= book.book_comments.count %>件コメント</td>
          </tr>
         <% end %>
         <%= paginate @books %>
      </tbody>
    </table>
</div>

