<h2>新規投稿</h2>
  <% if book.errors.any? %>
    <ul>
        <%= book.errors.count %><span>error</span>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
    </ul>
  <% end %>
<%= form_for(book) do |f| %>
  <div class="field row">
      <label>タイトル</label>
      <%= f.text_field :title, class:"col-xs-12"%>
  </div>
  <div class="field row">
      <label>感想</label>
      <%= f.text_area :body, class:"col-xs-12" %>
  </div><br>
  <div class="actions row">
      <%= f.submit '投稿',class:"btn btn-primary col-xs-12" %>
    </div>
<% end %>