<div class="col-xs-3">
  <h2>ユーザー情報</h2>
  <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, format: 'jpeg', class: " ", fallback: "no_image.jpg" %> 
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>ユーザー名</th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <th>自己紹介</th>
        <th><%= current_user.introduction %></th>
      </tr>
      <tr>
        <th>フォロー</th>
        <th>
          <%= link_to follows_user_path(current_user) do %>
            <strong id="following" class="stat">
              <%= current_user.followings.count %>
            </strong>
          <% end %>
        </th>
      </tr>
      <tr>
        <th>フォロワー</th>
        <th>
          <%= link_to followers_user_path(current_user) do %>
            <strong id="followers" class="stat">
              <%= current_user.followers.count %>
            </strong>
          <% end %>
        </th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <%= link_to "", edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"%>
  </div>

    <%= render 'books/form', book: @book %>
</div>
<div class="col-xs-9">
  <h2>ユーザー一覧</h2>
  <table class="table">
    <thead>
      <tr>
        <th>写真</th>
        <th>名前</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 20, 20, format: 'jpeg', class: " ", fallback: "no-image-icon.jpg" ,size:'20x20' %></td> 
          <td><%= user.name %></td>
          <td>フォロー数:<%= link_to follows_user_path(user) do %>
            <strong id="following" class="stat">
              <%= user.followings.count %>
            </strong>
          <% end %>
          </td>
          <td>フォロワー数:<%= link_to followers_user_path(user) do %>
            <strong id="followers" class="stat">
              <%= user.followers.count %>
            </strong>
            <% end %>
          </td>
          <td>
            <% if current_user != user %>
              <% if user.followed_by?(current_user) %>
                <p><%=link_to "フォロー中", user_relationships_path(user.id), method: :delete,class:"btn btn-primary" %></p>
            <% else %>
                <p><%=link_to "フォロー　", user_relationships_path(user.id), method: :post, class:"btn btn-success"  %></p>
              <% end %>
            <% end %>
          </td>
          <td><%= link_to "詳細ページ", user_path(user) %><td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>